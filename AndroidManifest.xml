<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.tinovation.convrtr"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:theme="@style/AppTheme" android:icon="@drawable/convrtr_icon" android:name="Convrtr">
        <activity
            android:name="org.tinovation.convrtr.TitleActivity"
            android:label="@string/app_name" android:screenOrientation="portrait" android:logo="@drawable/logo">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="org.tinovation.convrtr.SwipeActivity"
            android:label="@string/title_activity_swipe" android:screenOrientation="portrait" android:logo="@drawable/logo">
        </activity>
    </application>

</manifest>
